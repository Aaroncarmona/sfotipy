<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".WelcometoSfotipy">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:id="@+id/welcome_image"
        android:scaleType="centerCrop"
        android:src="@drawable/header_bg"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/welcome_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_color"
        android:layout_alignBottom="@+id/welcome_image"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_above="@+id/welcome_text"
        android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/welcome_text_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text_footer"
        android:layout_marginBottom="15dp"
        android:textColor="@color/text_color"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/fab_1"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:background="@drawable/ripple"
        android:elevation="4dp"
        android:onClick="onClick"
        android:src="@drawable/login"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/welcome_text_footer"
        android:layout_centerHorizontal="true" />

    </LinearLayout>


</RelativeLayout>
